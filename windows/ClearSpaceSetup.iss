Source: ".\bin\x86\Release\fr-FR\CleanSpace.resources.dll"; DestDir: "{app}\fr-FR"; Flags: ignoreversion
Source: ".\bin\x86\Release\it-IT\CleanSpace.resources.dll"; DestDir: "{app}\it-IT"; Flags: ignoreversion
Source: ".\bin\x86\Release\ja-JP\CleanSpace.resources.dll"; DestDir: "{app}\ja-JP"; Flags: ignoreversion
Source: ".\bin\x86\Release\ko-KR\CleanSpace.resources.dll"; DestDir: "{app}\ko-KR"; Flags: ignoreversion
Source: ".\bin\x86\Release\nb-NO\CleanSpace.resources.dll"; DestDir: "{app}\nb-NO"; Flags: ignoreversion
