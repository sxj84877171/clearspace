Source: ".\bin\x86\Release\ManagedWifi.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: ".\bin\x86\Release\EPHotspot.exe"; DestDir: "{app}"; Check: not IsWin64; Flags: ignoreversion
Source: ".\bin\x86\Release\EPHotspot64.exe"; DestDir: "{app}"; Check: IsWin64; DestName: "EPHotspot.exe"; Flags: ignoreversion
Source: ".\bin\x86\Release\zh-CN\CleanSpace.resources.dll"; DestDir: "{app}\zh-CN"; Flags: ignoreversion
Source: ".\bin\x86\Release\da-DK\CleanSpace.resources.dll"; DestDir: "{app}\da-DK"; Flags: ignoreversion
