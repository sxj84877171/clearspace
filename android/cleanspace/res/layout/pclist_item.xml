<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/pc_backgroud"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/PC_Pic"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_computer_white" />

        <TextView
            android:id="@+id/PCName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/PC_Pic"
            android:text="xxxxxxx"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/PCName"
            android:text="@string/offline"
            android:textColor="#30ffffff"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/finishTimeRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@id/PC_Pic"
            android:layout_toRightOf="@id/PC_Pic"
            android:visibility="gone" >

            <TextView
                android:id="@+id/last_finishTime_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_finishTime"
                android:textColor="#80ffffff"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/last_finishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.09.15 12:00"
                android:textColor="#80ffffff"
                android:textSize="9sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/select_pc"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_choosed_computer"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/cancle"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/scan_cancle_save_selector"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/unsave"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>